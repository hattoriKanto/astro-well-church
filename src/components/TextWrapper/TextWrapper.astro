---
import FlexWrapper from "../../ui/FlexWrapper/FlexWrapper.astro";

import "./TextWrapper.css";

type TextData = {
  title: string;
  description: string;
};

type Props = {
  textData: TextData;
};

const {
  textData: { title, description },
} = Astro.props;
---

<FlexWrapper className="text-wrapper">
  <h3 class="text-wrapper__title">{title}</h3>
  <p class="text-wrapper__description">{description}</p>
</FlexWrapper>
