---
import Image from "astro/components/Image.astro";
import Description from "../../ui/Description/Description.astro";

import "./TextImageSection.css";

type Props = {
  isReversed?: boolean;
  backgroundColor?: string;
  description: string;
  image: ImageMetadata;
};

const {
  isReversed,
  backgroundColor = "var(--white)",
  description,
  image,
} = Astro.props;
const wrapperClass = isReversed ? "text-image reversed" : "text-image";
---

<div class=`${wrapperClass}`>
  <div class="text-image__text-wrapper">
    <Description className="text-image__description">{description}</Description>
  </div>
  <div class="text-image__image-wrapper">
    <span class="top-key" style={{ backgroundColor }}></span>
    <Image class="text-image__image" src={image} alt="" />
    <span class="bottom-key-1" style={{ backgroundColor }}></span>
    <span class="bottom-key-2" style={{ backgroundColor }}></span>
  </div>
</div>
