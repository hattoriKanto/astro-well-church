<script is:inline type="module">
  const ourBeliefs = document.querySelector(".our-beliefs");
  const accordions = ourBeliefs.querySelectorAll(".our-beliefs__accordion");
  const contentWrapperArray = ourBeliefs.querySelectorAll(
    ".our-beliefs__content-wrapper"
  );
  const plusSvgArray = ourBeliefs.querySelectorAll(".plus-svg");
  const minusSvgArray = ourBeliefs.querySelectorAll(".minus-svg");

  accordions.forEach((currentAccordion) => {
    currentAccordion.addEventListener("click", () => {
      const currentContentWrapper = currentAccordion.querySelector(
        ".our-beliefs__content-wrapper"
      );
      const currentPlusSvg = currentAccordion.querySelector(".plus-svg");
      const currentMinusSvg = currentAccordion.querySelector(".minus-svg");

      contentWrapperArray.forEach((contentWrapper) => {
        if (contentWrapper !== currentContentWrapper) {
          contentWrapper.classList.remove("show");
        }
      });

      minusSvgArray.forEach((minus) => {
        if (minus !== currentMinusSvg) {
          minus.classList.remove("show");
        }
      });

      plusSvgArray.forEach((plus) => {
        if (plus !== currentPlusSvg) {
          plus.classList.remove("hide");
        }
      });

      currentContentWrapper.classList.toggle("show");
      currentMinusSvg.classList.toggle("show");
      currentPlusSvg.classList.toggle("hide");
    });
  });

  contentWrapperArray.forEach((wrapper) => {
    wrapper.addEventListener("click", (event) => {
      event.stopPropagation();
    });
  });
</script>
