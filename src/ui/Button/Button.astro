---
import "./Button.css";

type Props = {
  href: string;
  backrgoundColor?: string;
  color?: string;
};

const { href, backrgoundColor = "transparent", color } = Astro.props;
---

<a class="button" href={href} style={{ backgroundColor: backrgoundColor }}>
  <span class="top-key" style={{ backgroundColor: backrgoundColor }}></span>
  <span class="text">
    <slot />
  </span>
  <span class="bottom-key-1" style={{ backgroundColor: backrgoundColor }}
  ></span>
  <span class="bottom-key-2" style={{ backgroundColor: backrgoundColor }}
  ></span>
</a>
