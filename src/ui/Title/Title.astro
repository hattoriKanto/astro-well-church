---
import type { JSX } from "astro/jsx-runtime";
import "./Title.css";

type TitleTag = "h1" | "h2" | "h3";

type Props = {
  tag: TitleTag;
  style?: astroHTML.JSX.CSSProperties | string;
};

const { tag, style } = Astro.props;
const Tag = tag as JSX.Element;
---

<Tag class={`title-${tag}`} style={style}>
  <slot />
</Tag>
